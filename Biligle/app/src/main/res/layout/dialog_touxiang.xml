<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
  <RelativeLayout
      android:layout_width="260dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true" 
      android:background="@drawable/text_shape10">

      <TextView
          android:id="@+id/tv1"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="选择图片来源"
          android:background="@drawable/text_shape11"
          android:textSize="14sp" />

      <Button
          android:id="@+id/bt1_touxiang"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_below="@+id/tv1"
          android:background="@drawable/text_shape9"
          android:text="拍照 "
          android:textSize="14sp"
          android:gravity="center"
          android:paddingTop="5dp"
          android:clickable="true"
          />

      <Button
          android:id="@+id/bt2_touxiang"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_below="@+id/bt1_touxiang"
          android:background="@drawable/text_shape9"
          android:text="相册"
          android:textSize="14sp" 
          android:gravity="center"
          android:paddingTop="5dp" 
          android:clickable="true"
       />

      <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_below="@+id/imageView3"
          >
           <Button
          android:layout_marginTop="20dp"
          android:id="@+id/bt3_touxiang"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:text="取消"
          android:textSize="14sp" 
          android:clickable="true"

          android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerInParent="true"
          />
          
      </RelativeLayout>
     

      <View
          android:id="@+id/imageView1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/tv1"
          android:background="#a9a9a9" />

      <View
          android:id="@+id/imageView2"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/bt1_touxiang"
          android:background="#a9a9a9" />

      <View
          android:id="@+id/imageView3"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/bt2_touxiang"
          android:background="#a9a9a9" />

  </RelativeLayout>

</RelativeLayout>
